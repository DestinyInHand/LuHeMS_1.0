<script type="text/javascript">
    // 初始化modal表单中的数据
    $("#modal_submit,#modal_cancel").click(function(){
        $('#modal_title').text('新建用户');
        $('#modal_description').text("用户信息");
        $('#modal_username').val('');
        $('#modal_passwd').val('');
        $('#modal_phone').val('');
    });
    // 当编辑用户信息时，要将信息同步到modal中对应的元素上
    $(".edit").click(function(){
        $('#modal_title').text('用户信息编辑');
        var username = $(this).parent().siblings('.user_name').text();
        var password = $(this).parent().siblings('.pass_word').text();
        var phone = $(this).parent().siblings('.user_phone').text();
        $('#modal_description').text(username+'的信息列表');
        $('#modal_username').val(username);
        $('#modal_passwd').val(password);
        $('#modal_phone').val(phone);
        $(this).attr('href','users.html#myModal');
    });
    // 删除用户信息，弹出modal_2确认框
    $('.delete').click(function(){
        var username = $(this).parent().siblings('.user_name').text();
        $('#deleted_username').text(username);
        $('#deleted_username').css({'color':'red','font-weight':'bold','font-style':'oblique','font-size':'larger'});
        $(this).attr('href','user.html#myModal_2');
    });
</script>
