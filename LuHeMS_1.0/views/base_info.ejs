    <section id="main-content">
        <section class="wrapper site-min-height">
            <br />
            <div class="row">
                <div class="col-md-1 col-md-offset-5">
                    <h4 style="font-weight:bold;color:#009900"><i class="fa fa-bank"></i>&nbsp温室选择</h4>
                </div>
                <div class="col-md-1">
                    <select id="base_id" class="form-control" style="text-align:center">
                        <option>---请选择---</option>
                        <option value="一">温室一</option>
                        <option value="二">温室二</option>
                        <option value="三">温室三</option>
                    </select>
                </div>
            </div>
            <hr>

            <div class="row">
                <!-- 温室基本信息编辑 -->
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-panel">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4 style="font-height:bold;"><i class="fa fa-list"></i>&nbsp温室<span class="base_id"></span>基本信息</h4>
                                    </div>
                                    <div class="col-md-1 col-md-offset-3">
                                        <button id="base_info_submit" class="btn btn-primary btn-success"><i class="fa fa-edit"></i>&nbsp&nbsp<span>温室初始化</span></button>
                                    </div>
                                </div>
                                <br>
                                <form class="form-horizontal style-form" method="get">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">温室面积：</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form base_info" placeholder="温室占地面积/m²" disabled="disabled">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">工作人员：</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form base_info" disabled="disabled">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">联系方式</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form base_info" placeholder="工作人员联系方式" disabled="disabled">
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 温室农作物信息编辑 -->
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-panel">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4 style="font-height:bold;"><i class="fa fa-list"></i>&nbsp温室<span class="base_id"></span>农作物信息</h4>
                                    </div>
                                    <div class="col-md-1 col-md-offset-3">
                                        <button id="crop_info_submit" class="btn btn-primary btn-success"><i class="fa fa-edit"></i>&nbsp&nbsp<span>农作物初始化</span></button>
                                    </div>
                                </div>
                                <br>
                                <form class="form-horizontal style-form" method="get">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">农作物品种</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form crop_info" disabled="disabled">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">农作物编号</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form crop_info" disabled="disabled">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">农作物所需肥料</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form crop_info" placeholder="氮、磷、钾、复合等肥料" disabled="disabled">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">土壤墒情分级</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form crop_info" placeholder="干、较干、合适、湿、湿水等" disabled="disabled">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">农作物入棚时间</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form crop_info" disabled="disabled">
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
