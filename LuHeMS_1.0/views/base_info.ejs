<!--script for this page-->

<script>
    $('#base_id').change(function(){
        var base_name = $('#base_id').val();
        $('.base_id').text(base_name);
    });

    $('#base_info_submit').click(function(){
        var edit_status = $('.base_info').attr('disabled');
        if (edit_status == 'disabled') {
            $('.base_info').removeAttr('disabled');
            $(this).children('span').text('确认');
        }else{
            $('.base_info').attr('disabled','disabled');
            $(this).children('span').text('温室初始化');
        }
    });

    $('#crop_info_submit').click(function(){
        var edit_status = $('.crop_info').attr('disabled');
        if (edit_status == 'disabled') {
            $('.crop_info').removeAttr('disabled');
            $(this).children('span').text('确认');
        }else{
            $('.crop_info').attr('disabled','disabled');
            $(this).children('span').text('农作物初始化');
        }
    });
</script>

